@using Traversal.Entities.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Onay Bekleyen Rezervasyonlarınız</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web sitemiz Traversal üzerinden yapmış olduğunuz onay bekleyen rezervasyon listenize aşağıdan erişebilirsiniz. En kısa sürede rezervasyonlarınız onaylanacak ve size bilgilendirme sağlanacaktır. </p>
                    <div class="table-responsive">
                        @if (!Model.Any())
                        {
                            <h2>Onay bekleyen rezervasyonunuz bulunmuyor.</h2>
                        }
                        else
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <td>Lokasyon</td>
                                        <td>Kişi Sayısı</td>
                                        <td>Rezervasyon Tarihi</td>
                                        <td>Durum</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Destination.City</td>
                                            <td>@item.PersonCount</td>
                                            <td>@item.ReservationDate</td>
                                            <td>@item.Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>