@using Traversal.Entities.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Tur Rotası Arama Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web sitemiz Traversal üzerindeki aktif tur rotalarımız aşağıda listelenmiştir. </p>
                    <form asp-action="GetCitiesSearchByName" method="get" asp-area="Member">
                        <div>
                            <p>Lütfen aranacak şehri giriniz: <input type="text" name="searchString" class="form-control" values="@ViewData["CurrentFilter"]"/> 
                                <br />
                            <input type="submit" value="Şehir Ara" class="btn btn-outline-success"/>
                            </p>
                        </div>
                    </form>
                    <div class="table-responsive">
                        @if (!Model.Any())
                        {
                            <h2>Aktif Tur Rotamız Bulunmuyor.</h2>
                        }
                        else
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <td>Şehir</td>
                                        <td>Süre</td>
                                        <td>Kapasite</td>
                                        <td>Fiyat</td>
                                        <td>Detaylar</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.City</td>
                                            <td>@item.DayNight</td>
                                            <td>@item.Capacity</td>
                                            <td>@item.Price</td>
                                            <td><a href="/Destination/DestinationDetails/@item.Id" class="btn btn-outline-info">Detaylar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

